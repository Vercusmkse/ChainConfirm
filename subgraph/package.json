{
  "name": "chainconfirm-subgraph",
  "version": "1.0.0",
  "description": "A subgraph for indexing the ChainConfirm smart contract",
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "deploy": "graph deploy --node https://api.thegraph.com/deploy/ YOUR_GRAPH_USERNAME/chainconfirm",
    "create-local": "graph create --node http://localhost:8020/ chainconfirm",
    "remove-local": "graph remove --node http://localhost:8020/ chainconfirm",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 chainconfirm"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.30.0",
    "@graphprotocol/graph-ts": "0.27.0"
  }
}
